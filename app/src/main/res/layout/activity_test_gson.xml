<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_gson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chk.mymovie.TestGsonActivity">

    <ImageView
        android:id="@+id/picOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/picTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000ff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/picOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/picThree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/picTwo"
        android:layout_marginTop="10dp"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/picFour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:id="@+id/picFive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/picSix"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_alignTop="@+id/picTwo"
        android:layout_alignLeft="@+id/picFive"
        android:layout_alignStart="@+id/picFive" />

    <ImageView
        android:id="@+id/picSeven"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_alignTop="@+id/picThree"
        android:layout_alignLeft="@+id/picSix"
        android:layout_alignStart="@+id/picSix" />

    <ImageView
        android:id="@+id/picEight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_alignTop="@+id/picFour"
        android:layout_alignLeft="@+id/picSeven"
        android:layout_alignStart="@+id/picSeven" />

</RelativeLayout>
